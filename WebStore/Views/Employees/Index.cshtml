@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <a asp-action="Edit" class="btn btn-success">Создать</a>
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Фамалия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
            <tr>
                <td>
                    <a asp-controller="Employees" asp-action="EmployeeDetails" asp-route-id="@employee.Id" class="btn-btn-primary">
                        <i class="fa fa-info-circle"></i>
                    </a>
                </td>
                <td>@employee.Id</td>
                <td>@employee.Surname</td>
                <td>@employee.FirstName</td>
                <td>@employee.Patronimic</td>
                <td>@employee.Age</td>
                @*<td><a href="@Url.Action("EmployeeDetails", "Employees")>Инфа*@
                @*"{controller=Home}/{action=Index}/{id?}"*@
            <td>
                <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success">
                    <i class="=fa fa-edit"></i>
                </a>

                <a asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                    <i class="=fa fa-trash-o"></i>
                </a>
            </td>

            </tr>
            }
        </tbody>
    </table>
</div>