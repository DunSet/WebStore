@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Фамалия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Surname</td>
                <td>@employee.FirstName</td>
                <td>@employee.Patronimic</td>
                <td>@employee.Age</td>
                @*<td><a href="@Url.Action("EmployeeDetails", "Employees")>Инфа*@
                @*"{controller=Home}/{action=Index}/{id?}"*@
                <td><a asp-controller="Employees" asp-action="EmployeeDetails" asp-route-id="@employee.Id">Инфомраиця </a></td>

            </tr>
            }
        </tbody>
    </table>
</div>